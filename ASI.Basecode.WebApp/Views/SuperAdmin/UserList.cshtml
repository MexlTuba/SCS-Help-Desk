@model ASI.Basecode.Services.ServiceModels.UserListViewModel

@{
    ViewData["Title"] = "Super Admin User List - SCS Help Desk";
}

<div style="display: flex; min-height: 100vh;">
    <!-- Sidebar -->
    <div style="width: 250px; background-color: #f8f9fa;">
        <div style="padding: 15px;">
            <img src="~/img/SCS-Logo.png" alt="SCS Logo" style="max-width: 50px; margin-bottom: 10px;">
            <h5 style="margin-bottom: 20px;">SCS HELP DESK</h5>
        </div>
        <div>
            <a href="@Url.Action("SuperAdminDashboard", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-grid"></i> DASHBOARD
            </a>
            <a href="@Url.Action("UserList", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: white; background-color: #6c757d;">
                <i class="bi bi-person"></i> USER LIST
            </a>
            <a href="@Url.Action("Tickets", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-ticket"></i> TICKETS
            </a>
            <a href="@Url.Action("Settings", "SuperAdmin")" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-gear"></i> ACCOUNT SETTINGS
            </a>
            <a asp-action="SignOutUser" asp-controller="Account" style="display: block; padding: 10px 15px; text-decoration: none; color: black;">
                <i class="bi bi-box-arrow-right"></i> LOGOUT
            </a>
        </div>
    </div> <!-- Closing Sidebar -->
    <!-- Main Content -->
    <div style="flex: 1; background: #D9D9D9; padding: 20px;">
        <div style="background-color: white; border-radius: 15px; padding: 30px; margin: 0 20px;">
            <h2 class="card-title mb-4">USER LIST</h2>

            <div class="row mb-4 align-items-center">
                <!-- Left section: Search bar, filter dropdown, apply filter, reset filter -->
                <div class="col-md-9 d-flex align-items-center" style="flex-wrap: nowrap; gap: 15px;">
                    <form method="get" action="@Url.Action("UserList", "SuperAdmin")" class="d-flex w-100 align-items-center" style="gap: 15px;">
                        <!-- Search Bar -->
                        <div class="input-group" style="max-width: 250px;">
                            <span class="input-group-text" style="background-color: #f8f9fa; border: none;">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="number"
                                   class="form-control"
                                   placeholder="Search ID"
                                   name="searchId"
                                   value="@ViewBag.SearchId"
                                   style="background-color: #f8f9fa; border: none;"
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                                   class="no-arrows">
                        </div>

                        <!-- Filter Dropdown -->
                        <select name="role" class="form-select" style="border: none; max-width: 200px;">
                            <option value="">All</option>
                            <option value="Admin">Admin</option>
                            <option value="Support Agent">Support Agent</option>
                            <option value="Student">Student</option>
                        </select>

                        <!-- Apply Filter Button -->
                        <button type="submit" class="btn btn-primary" style="background-color: white; color: #E68D4F; border: 2px solid #E68D4F;">
                            Apply Filter
                        </button>

                        <!-- Reset Filter Button -->
                        <a href="@Url.Action("UserList", "SuperAdmin")" class="btn btn-outline-secondary">Reset Filters</a>
                    </form>
                </div>

                <!-- Right section: Add User button -->
                <div class="col-md-3 d-flex justify-content-end">
                    <a href="@Url.Action("UserAdd", "SuperAdmin")" class="btn btn-primary" style="background-color: #E68D4F; color: black;">
                        <i class="bi bi-plus"></i> Add User
                    </a>
                </div>
            </div>





            <hr style="border: 1px solid black;">

            <div class="table-responsive">
                <table class="table">
                    <thead style="background-color: #E68D4F; color: black;">
                        <tr>
                            <th>Name</th>
                            <th>Role</th>
                            <th>ID Number</th>
                            <th>School email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Role</td>
                                <td>@user.UserId</td>
                                <td>@user.Email</td>
                                <td>
                                    <div class="btn-group" role="group" style="box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                                        <a href="@Url.Action("Edit", "SuperAdmin", new { id = user.UserId })" class="btn btn-sm" style="background-color: #EBEBEB; color: #E68D4F; padding: 12px; font-size: 20px;"><i class="bi bi-pencil"></i></a>
                                        <a href="#" class="btn btn-sm" style="background-color: #EBEBEB; color: #E68D4F; padding: 12px; font-size: 20px;" onclick="confirmDelete('@user.UserId')"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("UserList", new { role = Model.Role, page = i })" style="color: @(i == Model.CurrentPage ? "white" : "#E68D4F"); background-color: @(i == Model.CurrentPage ? "#E68D4F" : "white"); border-color: #E68D4F;">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div> <!-- Closing Main Content -->
    </div> <!-- Closing flex container -->
    @section Scripts {
        <script>
            function confirmDelete(userId) {
                if (confirm("Are you sure you want to delete this user?")) {
                    window.location.href = '@Url.Action("Delete", "SuperAdmin")?id=' + userId;
                }
            }
        </script>
    }

    @section Styles {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
            
        <style>
            /* Remove number input arrows */
            input[type="number"]::-webkit-inner-spin-button,
            input[type="number"]::-webkit-outer-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            input[type="number"] {
                -moz-appearance: textfield;
            }
        </style>
    }
